# Basic directory access
Options +Indexes
Order Allow,Deny
Allow from all

# Basic PHP configuration
<FilesMatch "\.php$">
    Require all granted
</FilesMatch>

# Allow access to specific file types
<Files *>
    Order Allow,Deny
    Allow from all
</Files>

# Configure directory listing display
IndexOptions FancyIndexing HTMLTable VersionSort NameWidth=* DescriptionWidth=* SuppressRules
IndexIgnore .htaccess .htpasswd .DS_Store .git
IndexStyleSheet /style.css

# Enable compression for faster downloads
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/octet-stream
</IfModule>

# Force file download instead of displaying in browser
<FilesMatch "\.(zip|rar|gz|tar|pdf|doc|docx|xls|xlsx|ppt|pptx|mp3|mp4)$">
    ForceType application/octet-stream
    Header set Content-Disposition attachment
</FilesMatch>

# Enable caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType application/octet-stream "access plus 1 year"
</IfModule>

# PHP settings (only if allowed in Apache configuration)
<IfModule mod_php.c>
    php_value upload_max_filesize 100M
    php_value post_max_size 100M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule> 